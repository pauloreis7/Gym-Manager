{% extends "layout.njk" %}

{% block content %}

    <div class="card details-table">

        <article class="table_header">

            <a href="/instructors/create">Novo</a>
        
            <form action="/instructors" method="get">

                <input name="filter" value="{{ search }}" placeholder="Pesquisar nome ou serviço">

                <button type="submit">Pesquisar</button>

            </form>
            
        </article>

        

        <table width="100%">
            <thead>

                <tr>
                    <th>Instrutor</th>
                    <th>Atendimento</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            
            </thead>

            <tbody>
            
                {% for instructor in instructors %}

                    <tr>
                        
                        <td><span style="background-image: url({{ instructor.avatar_url }})"></span> {{ instructor.name }}</td>
                        <td>{{ instructor.services }}</td>
                        <td>{{ instructor.total_students }}</td>
                        <td><a href="/instructors/{{ instructor.id }}">VER</a></td>
                        
                    </tr>

                {% endfor %}
            
            </tbody>
        
        </table>
        
    </section>

    </div>

{% endblock content %}