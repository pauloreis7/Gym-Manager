{% extends "layout.njk" %}

{% block content %}

    <div class="card">

    <section class="avatar" style="background: url({{ member.avatar_url }}) no-repeat center center / cover">

    </section>

    <section class="details">

        <h3>Detalhes Membro</h3>

        <article class="item">
        
            <div>Membro</div>
            <div>{{member.name}}</div>
        
        </article>

        <article class="item">
        
            <div>E-mail</div>
            <div>{{member.email}}</div>
        
        </article>

        <article class="item">
        
            <div>Aniversário</div>
            <div>{{member.birth}}</div>
        
        </article>

        <article class="item">
        
            <div>Sexo</div>
            <div>{{"Masculino" if member.gender == "M" else "Feminino" }}</div>
        
        </article>

        <article class="item">
        
            <div>Tipo sanguíneo</div>
            <div>{{ member.blood }}</div>
        
        </article>

        <article class="item">
        
            <div>Peso (Kg)</div>
            <div>{{ member.weight }}</div>
        
        </article>

        <article class="item">
        
            <div>Altura (cm)</div>
            <div>{{ member.height }}</div>
        
        </article>
            
        
        <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

    </section>

    </div>

{% endblock content %}