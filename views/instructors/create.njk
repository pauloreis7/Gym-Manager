{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">

        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8353395/400x600) no-repeat center center / cover">

        </section>

        <section class="details">

            <h3>Instrutor</h3>

            <article class="item">
            
                <div>Avatar URL</div>

                <div>

                    <input type="url" name="avatar_url" placeholder="http://">

                </div>

            </article>
            
            <article class="item">
            
                <div>Instrutor</div>

                <div>

                    <input type="text" name="name" placeholder="Nome do instrutor"/>

                </div>

            </article>

            <article class="item">
            
                <div>Data de nascimento</div>

                <div>
                
                    <input type="date" name="birth" />
                
                </div>
            
            </article>

            <article class="item">
            
                <div>Sexo</div>

                <div>
                
                   <span> <input type="radio" name="gender" value="M" />Masculino </span>
                   <span> <input type="radio" name="gender" value="F" />Feminino </span>
                
                </div>
            
            </article>

            <article class="item">
            
                <div>Área de atuação</div>

                <div>
                
                    <input type="text" name="services" placeholder="Separe os serviços por vírgula"/>
                
                </div>
                
            </article>

            <button type="submit">Salvar</button>

        </section>
        
    </form>

{% endblock content %}